{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "project": {
    "name": "toeic-helper-client"
  },
  "apps": [
    {
      "root": "src",
      "outDir": "../toeicHelper/src/main/webapp",
      "assets": [
        "assets",
        "favicon.ico",
        ".htaccess"
      ],
      "index": "index.html",
      "main": "main.ts",
      "polyfills": "polyfills.ts",
      "test": "test.ts",
      "tsconfig": "tsconfig.app.json",
      "testTsconfig": "tsconfig.spec.json",
      "prefix": "app",
      "styles": [
        "styles.css",
        "assets/admin/bower_components/bootstrap/dist/css/bootstrap.min.css",
        "assets/admin/bower_components/Ionicons/css/ionicons.min.css",
        "assets/admin/bower_components/font-awesome/css/font-awesome.css",
        "assets/admin/dist/css/AdminLTE.min.css",
        "assets/admin/dist/css/skins/_all-skins.min.css",
        "assets/admin/bower_components/datatables.net-bs/css/dataTables.bootstrap.min.css",
        "assets/admin/bower_components/bootstrap-daterangepicker/daterangepicker.css",
        "assets/admin/bower_components/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css",
        "assets/admin/plugins/timepicker/bootstrap-timepicker.min.css",
        "assets/admin/bower_components/select2/dist/css/select2.min.css",
        "assets/admin/bower_components/bootstrap-datetimepicker-master/css/bootstrap-datetimepicker.min.css",
        "../node_modules/froala-editor/css/froala_editor.pkgd.min.css",
        "../node_modules/froala-editor/css/froala_style.min.css",
        "assets/css/custom.css"
   
      ],
      "scripts": [
        "./assets/admin/bower_components/jquery/dist/jquery.min.js",
        "./assets/admin/bower_components/bootstrap/dist/js/bootstrap.min.js",
        "./assets/admin/bower_components/jquery-ui/jquery-ui.min.js",
        "./assets/admin/bower_components/datatables.net/js/jquery.dataTables.min.js",
        "./assets/admin/bower_components/datatables.net-bs/js/dataTables.bootstrap.min.js",
        "./assets/admin/bower_components/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js",
        "./assets/admin/bower_components/bootstrap-datetimepicker-master/js/bootstrap-datetimepicker.min.js",
        "./assets/admin/plugins/timepicker/bootstrap-timepicker.min.js",
        "./assets/admin/bower_components/select2/dist/js/select2.full.min.js",
        "./assets/admin/bower_components/bootstrap-datetimepicker-master/js/locales/bootstrap-datetimepicker.fr.js",
        "./assets/js/custom.js", 
        "../node_modules/froala-editor/js/froala_editor.pkgd.min.js"
       
      ],
      "environmentSource": "environments/environment.ts",
      "environments": {
        "dev": "environments/environment.ts",
        "prod": "environments/environment.prod.ts"
      }
    }
  ],
  "e2e": {
    "protractor": {
      "config": "./protractor.conf.js"
    }
  },
  "lint": [
    {
      "project": "src/tsconfig.app.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "src/tsconfig.spec.json",
      "exclude": "**/node_modules/**"
    },
    {
      "project": "e2e/tsconfig.e2e.json",
      "exclude": "**/node_modules/**"
    }
  ],
  "test": {
    "karma": {
      "config": "./karma.conf.js"
    }
  },
  "defaults": {
    "styleExt": "css",
    "component": {}
  }
}